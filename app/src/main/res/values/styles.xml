<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Estilo para el tema claro -->
    <style name="AppThemeLight" parent="Theme.AppCompat.Light">
        <!-- Color del toolbar -->
        <item name="colorPrimary">#808080</item>
        <!-- Color del texto del toolbar -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <!-- Color del fondo de la actividad -->
        <item name="android:windowBackground">#FFFFFF</item>
        <!-- Color de los botones -->
        <item name="colorAccent">#FF4081</item>
        <!-- Otros atributos de estilo aquí -->
    </style>

    <!-- Estilo para el tema oscuro -->
    <style name="AppThemeDark" parent="Theme.AppCompat">
        <!-- Color del toolbar -->
        <item name="colorPrimary">#FF5722</item>
        <!-- Color del texto del toolbar -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <!-- Color del fondo de la actividad -->
        <item name="android:windowBackground">#000000</item>
        <!-- Color de los botones -->
        <item name="colorAccent">#00BCD4</item>
        <!-- Otros atributos de estilo aquí -->
    </style>

    <style name="LetraTexto">
        <item name="android:textColor">#9595</item>
        <item name="android:background">@drawable/borde_redondo</item>
    </style>

    <style name="Calendario_tema1" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">#f4f4f4</item>
        <item name="colorPrimary">#1abade</item>
        <item name="android:fontFamily">sans-serif-condensed-light</item>
    </style>

    <!-- Theme 2 -->
    <style name="Calendario_tema2" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/black</item>
        <!-- Otros atributos personalizados para el tema 2 -->
    </style>


    <style name="borde_redondo">
        <item name="android:background">@drawable/borde_redondo</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="calendario">
        <item name="android:background">@drawable/borde_redondo_calendario</item>
    </style>

    <style name="borde_redondo_azul">
        <item name="android:background">@drawable/borde_redondo_azul</item>
    </style>


</resources>